<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <!-- For moving photos between albums (optional - app works with per-file permission if not granted) -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:ignore="ScopedStorage" />
    <!-- 必要的权限用于MapLibre -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 前台服务权限 (Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    
    <!-- 通知权限 (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 闹钟/提醒权限 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".PicZenApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhotoZen"
        tools:targetApi="31">
        
        <!-- CrashLogger early initialization - runs before Application.onCreate() -->
        <provider
            android:name=".util.CrashLoggerInitProvider"
            android:authorities="${applicationId}.crashlogger"
            android:initOrder="9999"
            android:exported="false" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PhotoZen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 分享入口：用 PhotoZen 复制 - 支持单张和多张 -->
        <activity-alias
            android:name=".ShareCopyAlias"
            android:targetActivity=".MainActivity"
            android:label="用 PhotoZen 复制"
            android:icon="@mipmap/ic_launcher"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity-alias>
        
        <!-- 分享入口：用 PhotoZen 对比 - 仅支持多张 -->
        <activity-alias
            android:name=".ShareCompareAlias"
            android:targetActivity=".MainActivity"
            android:label="用 PhotoZen 对比"
            android:icon="@mipmap/ic_launcher"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity-alias>
        
        <!-- WorkManager Foreground Service -->
        <service
            android:name="androidx.work.impl.foreground.SystemForegroundService"
            android:foregroundServiceType="dataSync"
            tools:node="merge" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
        
        <!-- Daily Progress Widget -->
        <receiver
            android:name=".widget.DailyProgressWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/daily_progress_widget_info" />
        </receiver>

        <!-- Memory Lane Widget Configuration Activity -->
        <activity
            android:name=".widget.memory.MemoryLaneWidgetConfigActivity"
            android:exported="true"
            android:label="时光拾遗设置"
            android:theme="@style/Theme.PhotoZen">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <!-- Memory Lane Widget - 时光拾遗 (标准 4x2) -->
        <receiver
            android:name=".widget.memory.MemoryLaneWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.example.photozen.widget.memory.ACTION_KEEP" />
                <action android:name="com.example.photozen.widget.memory.ACTION_TRASH" />
                <action android:name="com.example.photozen.widget.memory.ACTION_REFRESH" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/memory_lane_widget_info" />
        </receiver>

        <!-- Memory Lane Widget - 时光拾遗 (小 2x2) -->
        <receiver
            android:name=".widget.memory.MemoryLaneWidgetCompact"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/memory_lane_widget_compact_info" />
        </receiver>

        <!-- Memory Lane Widget - 时光拾遗 (大 4x4) -->
        <receiver
            android:name=".widget.memory.MemoryLaneWidgetLarge"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.example.photozen.widget.memory.large.ACTION_KEEP" />
                <action android:name="com.example.photozen.widget.memory.large.ACTION_TRASH" />
                <action android:name="com.example.photozen.widget.memory.large.ACTION_REFRESH" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/memory_lane_widget_large_info" />
        </receiver>
        
        <!-- Boot Receiver to start services after device restart -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        
        <!-- Daily Progress Foreground Service -->
        <service
            android:name=".service.DailyProgressService"
            android:foregroundServiceType="dataSync"
            android:exported="false" />
    </application>

</manifest>