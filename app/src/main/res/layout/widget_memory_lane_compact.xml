<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memory_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_memory_lane_background"
    android:clipToOutline="true"
    android:outlineProvider="background">

    <!-- Photo Content Container -->
    <FrameLayout
        android:id="@+id/memory_photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Photo Image (full container, clickable to open app) -->
        <ImageView
            android:id="@+id/memory_photo_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/memory_photo_description"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Top Gradient Overlay for buttons visibility -->
        <ImageView
            android:id="@+id/memory_top_gradient"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/widget_gradient_top"
            android:scaleType="fitXY"
            android:contentDescription="@null" />

        <!-- Delete Button (top-left, no circular border) -->
        <ImageButton
            android:id="@+id/memory_btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|start"
            android:layout_margin="4dp"
            android:background="@null"
            android:contentDescription="@string/memory_action_delete"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_delete_white" />

        <!-- Refresh Button (top-right, no circular border) -->
        <ImageButton
            android:id="@+id/memory_btn_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@null"
            android:contentDescription="@string/memory_action_refresh"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_refresh_white" />

        <!-- Time Text Overlay (bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/widget_gradient_bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingTop="16dp"
            android:paddingBottom="6dp">

            <!-- Poetic Time Text -->
            <TextView
                android:id="@+id/memory_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/memory_time_placeholder"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:text="三年前的夏天" />

        </LinearLayout>

        <!-- "This Day in History" Badge -->
        <TextView
            android:id="@+id/memory_this_day_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="4dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/widget_badge_background"
            android:paddingHorizontal="4dp"
            android:paddingVertical="1dp"
            android:text="\uD83D\uDCC5"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <!-- Empty State Container -->
    <LinearLayout
        android:id="@+id/memory_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/memory_empty_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_empty_emoji"
            android:textSize="28sp"
            tools:text="\uD83C\uDF89" />

        <TextView
            android:id="@+id/memory_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/memory_empty_text"
            android:textColor="#666666"
            android:textSize="10sp"
            tools:text="所有记忆都已重温" />

    </LinearLayout>

</FrameLayout>
