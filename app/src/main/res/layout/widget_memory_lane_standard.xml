<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_memory_lane_background">

    <!-- Photo Content Container -->
    <LinearLayout
        android:id="@+id/memory_photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left: Photo with rounded corners (no padding for edge-to-edge) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/memory_photo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/memory_photo_description"
                tools:src="@drawable/ic_launcher_foreground" />

            <!-- "This Day in History" Badge -->
            <TextView
                android:id="@+id/memory_this_day_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:background="@drawable/widget_badge_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="@string/memory_this_day_badge"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- Right: Time + Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            android:gravity="center"
            android:minWidth="76dp">

            <!-- Poetic Time Text -->
            <TextView
                android:id="@+id/memory_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/memory_time_placeholder"
                android:textColor="#1A1A1F"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="三年前的\n夏天" />

            <!-- Location Text (hidden if no GPS) -->
            <TextView
                android:id="@+id/memory_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#666666"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="北京 · 朝阳区"
                tools:visibility="visible" />

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Trash Button -->
                <ImageButton
                    android:id="@+id/memory_btn_trash"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/widget_button_trash_background"
                    android:contentDescription="@string/memory_btn_trash_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete_white"
                    android:padding="8dp" />

                <!-- Refresh Button -->
                <ImageButton
                    android:id="@+id/memory_btn_refresh"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/widget_button_refresh_background"
                    android:contentDescription="@string/memory_btn_refresh_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_refresh_white"
                    android:padding="8dp" />

                <!-- Keep Button -->
                <ImageButton
                    android:id="@+id/memory_btn_keep"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/widget_button_keep_background"
                    android:contentDescription="@string/memory_btn_keep_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_check_white"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Empty State Container -->
    <LinearLayout
        android:id="@+id/memory_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/memory_empty_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_empty_emoji"
            android:textSize="36sp"
            tools:text="\uD83C\uDF89" />

        <TextView
            android:id="@+id/memory_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/memory_empty_text"
            android:textColor="#666666"
            android:textSize="12sp"
            tools:text="所有记忆都已重温" />

    </LinearLayout>

</FrameLayout>
