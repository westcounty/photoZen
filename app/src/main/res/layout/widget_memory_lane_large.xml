<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_memory_lane_background">

    <!-- Photo Content Container -->
    <LinearLayout
        android:id="@+id/memory_photo_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Photo with rounded corners -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/memory_photo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/memory_photo_description"
                tools:src="@drawable/ic_launcher_foreground" />

            <!-- "This Day in History" Badge -->
            <TextView
                android:id="@+id/memory_this_day_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/widget_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="@string/memory_this_day_badge"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- Bottom Section: Date + Time + Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left: Date and Poetic Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- Full Date with Province (e.g., 2019.07.28 福建省) -->
                <TextView
                    android:id="@+id/memory_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="11sp"
                    tools:text="2019.07.28 福建省" />

                <!-- Poetic Time with City (e.g., "去年厦门市的夏天") -->
                <TextView
                    android:id="@+id/memory_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/memory_time_placeholder"
                    android:textColor="#1A1A1F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="去年厦门市的夏天" />

                <!-- Location Text - hidden, kept for compatibility -->
                <TextView
                    android:id="@+id/memory_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="1sp"
                    tools:visibility="gone" />

            </LinearLayout>

            <!-- Right: Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Trash Button -->
                <ImageButton
                    android:id="@+id/memory_btn_trash"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/widget_button_trash_background"
                    android:contentDescription="@string/memory_btn_trash_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_delete_white"
                    android:padding="7dp" />

                <!-- Refresh Button -->
                <ImageButton
                    android:id="@+id/memory_btn_refresh"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/widget_button_refresh_background"
                    android:contentDescription="@string/memory_btn_refresh_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_refresh_white"
                    android:padding="7dp" />

                <!-- Keep Button -->
                <ImageButton
                    android:id="@+id/memory_btn_keep"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/widget_button_keep_background"
                    android:contentDescription="@string/memory_btn_keep_description"
                    android:scaleType="center"
                    android:src="@drawable/ic_check_white"
                    android:padding="7dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Empty State Container -->
    <LinearLayout
        android:id="@+id/memory_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/memory_empty_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory_empty_emoji"
            android:textSize="48sp"
            tools:text="\uD83C\uDF89" />

        <TextView
            android:id="@+id/memory_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/memory_empty_text"
            android:textColor="#666666"
            android:textSize="14sp"
            tools:text="所有记忆都已重温" />

    </LinearLayout>

</FrameLayout>
