<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center">

    <!-- Emoji - larger for better visibility -->
    <TextView
        android:id="@+id/widget_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŒ…"
        android:textSize="36sp" />

    <!-- Status text - main message -->
    <TextView
        android:id="@+id/widget_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="æ–°çš„ä¸€å¤©ï¼Œå¼€å§‹æ•´ç†å§ï¼"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold" 
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!-- Progress bar - styled for visibility -->
    <ProgressBar
        android:id="@+id/widget_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#E0E0E0"
        android:minHeight="6dp"
        android:maxHeight="6dp" />
        
    <!-- Progress text - shows current/target -->
    <TextView
        android:id="@+id/widget_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="0 / 100"
        android:textColor="#666666"
        android:textSize="11sp"
        android:textStyle="bold" />

</LinearLayout>
